# Coverage configuration file
# Consolidated coverage settings for ContentGraph MCP

[run]
# Run configuration
source = src
branch = True
parallel = True
concurrency = thread,multiprocessing

# Files to omit from coverage
omit = 
    tests/*
    */__pycache__/*
    */migrations/*
    */venv/*
    */virtualenv/*
    */.venv/*
    */site-packages/*
    */build/*
    */dist/*
    */htmlcov/*
    */scripts/migrate_data.py
    */scripts/setup_environment.py

[report]
# Report configuration
show_missing = True
skip_covered = False
skip_empty = True
precision = 2

# Minimum coverage percentage to pass
fail_under = 10

# Lines to exclude from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstract
    @abstractmethod
    class .*\bProtocol\):
    @overload

[html]
# HTML report configuration
directory = htmlcov
show_contexts = True
skip_covered = False
skip_empty = True
title = ContentGraph MCP Coverage Report

[xml]
# XML report configuration
output = coverage.xml

[paths]
# Path mapping for coverage
source = 
    src/
    */site-packages/contentgraph_mcp/
